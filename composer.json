{
	"name": "coldtrick/event_manager",
	"description": "Manage events, from a simple appointment to a multi day event with day programs and subscriptions",
	"homepage": "https://www.coldtrick.com",
	"type": "elgg-plugin",
	"keywords": ["elgg", "plugin", "events"],
	"license": "GPL-2.0-only",
	"support": {
		"source": "https://github.com/ColdTrick/event_manager",
		"issues": "https://github.com/ColdTrick/event_manager/issues"
	},
	"require": {
		"composer/installers": "^1.0.8",
		"ext-json": "*",
		"dompdf/dompdf" : "~2.0.0",
		"bower-asset/fullcalendar": "~2.9.0"
	},
	"repositories": [
		{
            "type": "composer",
            "url": "https://asset-packagist.org"
		}
	],
	"config": {
		"fxp-asset": {
            "enabled": false
		},
		"allow-plugins": {
			"composer/installers": true
		}
	},
	"conflict": {
		"elgg/elgg": "<4.3"
	}
}
